{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": "src",
    "incremental": true,
    "composite": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "downlevelIteration": true
  }
}
